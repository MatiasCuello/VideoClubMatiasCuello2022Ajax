@model List<VideoClub.Entidades.Entidades.Socio>
@{ ViewBag.Title = "index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<ol class="breadcrumb mt-4 mb-4 ">
    <li class="breadcrumb-item"><a href="index.html">Dashboard</a></li>
    <li class="breadcrumb-item active">Socios</li>
</ol>
<div class="card">
    <h5 class="card-header bg-dark text-white">
        <i class="fas fa-film"></i>
        Listado de Socios

    </h5>
    <div class="card-body">
        <button type="button" class="btn btn-primary" onclick="abrirModal()"><i class="fas fa-plus"></i> Nuevo</button>
        <hr />
        <table id="tabla" class="table display cell-border" style="width: 100%">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Apellido</th>
                    <th>Tipo Doc</th>
                    <th>Nro Doc</th>
                    <th>Direccion</th>
                    <th>Localidad</th>
                    <th>Provincia</th>
                    <th>Tel. Fijo</th>
                    <th>Tel. Movil</th>
                    <th>Correo</th>
                    <th>Fecha Nac</th>
                    <th>Sancionado</th>
                    <th>Activo</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>

    </div>
</div>
<!-- Modal -->
<!-- Button trigger modal -->
<!-- Modal -->
<div class="modal fade" id="FormModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Agregar Socio</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <input type="hidden" id="txtSocioId" value="0" />

                    <div class="row mt-3">
                        <div class="col-12">
                            <div id="mensajeError" class="alert alert-danger" role="alert">
                                A simple danger alert—check it out!
                            </div>
                        </div>
                    </div>


                    <div class="col-md-6">
                        <label for="txtNombre" class="form-label">Nombre</label>
                        <input type="text" class="form-control" id="txtNombre" placeholder="Ingrese Nombre">
                    </div>
                    <div class="col-md-6">
                        <label for="txtApellido" class="form-label">Apellido</label>
                        <input type="text" class="form-control" id="txtApellido" placeholder="Ingrese Apellido">
                    </div>
                    <div class="col-md-6">
                        <label for="cboTipoDocumento" class="form-label">Tipo De Documento</label>
                        <select id="cboTipoDocumento" class="form-select" aria-label="Default select example">
                        </select>
                    </div>
                    <div class="col-md-6">
                        <label for="txtNumeroDeDocumento" class="form-label">Numero De Documento</label>
                        <input type="text" class="form-control" id="txtNumeroDeDocumento" placeholder="Ingrese Numero De Documento">
                    </div>

                    <div class="col-md-6">
                        <label for="txtDireccion" class="form-label">Direccion</label>
                        <input type="text" class="form-control" id="txtDireccion" placeholder="Ingrese Direccion">
                    </div>
                    <div class="col-md-6">
                        <label for="txtTelefonoFijo" class="form-label">Telefono Fijo</label>
                        <input type="text" class="form-control" id="txtTelefonoFijo" placeholder="Ingrese Telefono Fijo">
                    </div>
                    <div class="col-md-6">
                        <label for="txtTelefonoMovil" class="form-label">Telefono Movil</label>
                        <input type="text" class="form-control" id="txtTelefonoMovil" placeholder="Ingrese TelefonoMovil">
                    </div>
                    <div class="col-md-6">
                        <label for="txtCorreoElectronico" class="form-label">Correo Electronico</label>
                        <input type="text" class="form-control" id="txtCorreoElectronico" placeholder="Ingrese Correo Electronico">
                    </div>


                    <div class="col-md-6">
                        <label for="cboLocalidad" class="form-label">Localidad</label>
                        <select id="cboLocalidad" class="form-select" aria-label="Default select example">
                        </select>
                    </div>
                    <div class="col-md-6">
                        <label for="cboProvincia" class="form-label">Provincia</label>
                        <select id="cboProvincia" class="form-select" aria-label="Default select example">
                        </select>
                    </div>

                    <div class="col-md-6">
                        <label for="cboSancionado" class="form-label">Sancionado</label>

                        <select id="cboSancionado" class="form-select" aria-label="Default select example">
                            <option value="0">NO</option>
                            <option value="1">SI</option>
                        </select>
                    </div>
                    <div class="col-md-6">
                        <label for="cboActivo" class="form-label">Activo</label>

                        <select id="cboActivo" class="form-select" aria-label="Default select example">
                            <option value="0">NO</option>
                            <option value="1">SI</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" onclick="Guardar()">Guardar</button>
            </div>
        </div>
    </div>
</div>
@section scripts
{
    <script>
     var tablaSocios;
        var filaSeleccionada;
        $(document).ready(function () {
            CargarTabla();
            //cargarCboTipoDocumento();
            //cargarCboPais();
            //cargarCboProvincias();
            //cargarCboLocalidad();


            $("#tabla tbody").on("click",
                '.btn-editar',
                function () {

                    filaSeleccionada = $(this).closest("tr");
                    var datos = tablaSocios.row(filaSeleccionada).data();
                    abrirModal(datos);

                });


            $("#tabla tbody").on("click",
                ".btn-borrar",
                function() {
                    var socioSeleccionado = $(this).closest("tr");
                    var datosSocios = tablaSocios.row(socioSeleccionado).data();


                    swal({
                            title: "¿Está seguro?",
                            text: "¿Desea eliminar el registro seleccionado?",
                            type: "warning",
                            showCancelButton: true,
                            confirmButtonClass: "btn-danger",
                            confirmButtonText: "SI",
                            cancelButtonText:"NO",
                            closeOnConfirm: false
                        },
                        function () {

                            jQuery.ajax({
                                url: "@Url.Action("EliminarSocio", "Socio")",
                                type: "POST",
                                data: JSON.stringify({ id: datosSocios.SocioId }),
                                dataType: "json",
                                contentType: "application/json; charset=utf-8",
                                success: function (data) {

                                    if (data.resultado) {
                                        tablaSocios.row(socioSeleccionado).remove().draw();
                                        swal("Borrado!", "Registro eliminado!!!", "success");
                                    } else {
                                        swal("No se pudo eliminar!", data.mensaje, "error");
                                    }


                                },
                                error:function(error) {
                                    console.log(error);
                                },
                                beforeSend:function() {

                                }
                            });


                        });
                });

        })



        function CargarTabla() {
            tablaSocios = $("#tabla").DataTable({

                responsive: "true",
                ordering: "false",
                "ajax": {
                    url: "@Url.Action("ListarSocios","Socio")",
                    type: "GET",
                    dataType: "json"
                },
                "columns": [
                    { "data": "Nombre" },

                    { "data": "Apellido" },

                    {
                        "data": "TipoDeDocumento",
                        render: function (data) {
                            return data.Descripcion
                        }

                    },
                    { "data": "NroDocumento" },

                    { "data": "Direccion" },

                    {
                        "data": "Localidad",
                        render: function (data) {
                            return data.NombreLocalidad
                        }

                    },
                    {
                        "data": "Provincia",
                        render: function (data) {
                            return data.NombreProvincia
                        }

                    },
                    { "data": "TelefonoFijo" },

                    { "data": "TelefonoMovil" },

                    { "data": "CorreoElectronico" },

                    { "data": "FechaDeNacimiento" },

                    {
                        "data": "Sancionado",
                        render: function(valorDeAlquilado) {
                            if (valorDeAlquilado) {
                                return '<span class="badge text-bg-success">SI</span>';
                            } else {
                                return '<span class="badge text-bg-danger">NO</span>';
                            }
                        }
                    },
                    {
                        "data": "Activo",
                        render: function(valorDeActiva) {
                            if (valorDeActiva) {
                                return '<span class="badge text-bg-success">SI</span>';
                            } else {
                                return '<span class="badge text-bg-danger">NO</span>';

                            }
                        }
                    },



                    {
                        "defaultContent":

                            '<button type="button" class="btn btn-warning mx-3 btn-editar"  ><i class="fas fa-pen"></i></button>' +
                                '<button type="button" class="btn btn-danger btn-borrar" ><i class="fas fa-trash"></i></button>',
                        "orderable": false,
                        "searchable": false,
                    }


                ]

            });
     }
    </script>
}