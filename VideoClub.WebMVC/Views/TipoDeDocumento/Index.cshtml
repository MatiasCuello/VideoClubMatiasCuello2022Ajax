@model List<VideoClub.Entidades.Entidades.TipoDeDocumento>
@{ ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml"; }
<div class="card">
    <h5 class="card-header bg-dark text-white">
        <i class="fas fa-address-card"></i>
        Listado de Tipos de Documentos

    </h5>
    <div class="card-body">
        <hr />
        <table class="table">
            <thead>
            <tr>
                <th>Tipo de Documento</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            @if (Model.Count == 0)
            {
                <tr>
                    <td>
                        No hay registros todavía
                    </td>
                </tr>
            }
            else
            {
                foreach (var tipoDeDocumento in Model)
                {
                    <tr>    
                        <td>@Html.DisplayFor(modelItem => tipoDeDocumento.Descripcion)</td>
                        
                    </tr>

                }
            }
            </tbody>
        </table>

    </div>
    <div class="card-footer text-muted">
        Cantidad de registros: <strong>@Model.Count</strong>
    </div>
</div>