@model List<VideoClub.Entidades.Entidades.Calificacion>
@{ ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml"; }
<ol class="breadcrumb mt-4 mb-4 ">
    <li class="breadcrumb-item"><a href="index.html">Dashboard</a></li>
    <li class="breadcrumb-item active">Calificaciones</li>
</ol>
<div class="card">
    <h5 class="card-header bg-primary text-white">
        <i class="fas fa-star"></i>
        Listado de Calificaciones

    </h5>
    <div class="card-body">
        <a href="@Url.Action("Create","Calificacion")" class="btn btn-primary">Nuevo</a>
        <hr />
        <table class="table">
            <thead>
                <tr>
                    <th>Calificacion</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count == 0)
                {
                <tr>
                    <td>
                        No hay registros todavía
                    </td>
                </tr> }
                            else
                            {
                                foreach (var calificacion in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => calificacion.Descripcion)</td>
                                        <td>
                                            @Html.ActionLink("Editar", "Edit", new { id = calificacion.CalificacionId } , new { @class = "btn btn-warning" })
                                            @Html.ActionLink("Borrar", "Delete", new { id = calificacion.CalificacionId }, new { @class = "btn btn-danger" })

                                        </td>
                                    </tr>               
                                 }
                             }
            </tbody>
        </table>

    </div>
    <div class="card-footer text-muted">
        Cantidad de registros: <strong>@Model.Count</strong>
    </div>
</div>
